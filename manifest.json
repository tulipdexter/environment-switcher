{
  "manifest_version": 2,
  "name": "Environment Switcher",
  "description": "Easily switch to different environment urls",
  "version": "0.0.1",
  "icons": {
    "48": "icons/logo_48.png",
    "96": "icons/logo_96.png"
  },
  "permissions": [
    "storage",
    "tabs"
  ],
  "browser_action": {
    "default_icon": "icons/logo_48.png",
    "default_title": "Environment Switcher",
    "default_popup": "browserAction/index.html",
    "browser_style": true
  },
  "options_page": "dist/options/index.html",
  "background": {
      "scripts": [
        "background.js"
      ]
  }
}